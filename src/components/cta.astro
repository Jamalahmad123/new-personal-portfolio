---
import BtnCommen from "./btnCommen.astro";
---

<!-- CTA Section -->
<section id="cta" class="pt-20 mb-24">
  <div
    class="container flex flex-col items-center justify-between gap-4 mx-auto px-4 py-12 space-y-6 md:flex-row md:space-y-0"
  >
    <!-- heading -->
    <h2
      class="font-heading text-3xl leading-tight font-semibold text-center md:max-w-xl md:text-4xl md:text-left flex-1"
    >
      Interested in doing a project together?
    </h2>

    <!-- Separator -->
    <div
      class="hidden h-px w-1/6 border-b border-darkBorder opacity-10 md:block"
    >
    </div>

    <!-- Contact Button -->
    <BtnCommen btnTitle="contact me" url="/contact" />
  </div>
</section>
